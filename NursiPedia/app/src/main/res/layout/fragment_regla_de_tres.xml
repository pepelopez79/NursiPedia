<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#AF0D0D"
    tools:context=".formulas.ReglaDeTresFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtA"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/estilo_secciones"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="50"
                android:padding="10dp"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblAR3"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:autofillHints="" />

            <EditText
                android:id="@+id/txtB"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/estilo_secciones"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="50"
                android:padding="10dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblBR3"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:autofillHints="" />

            <EditText
                android:id="@+id/txtC"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/estilo_secciones"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="50"
                android:padding="10dp"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblCR3"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:autofillHints="" />

            <EditText
                android:id="@+id/txtX"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/estilo_secciones"
                android:ems="5"
                android:inputType="numberDecimal"
                android:maxLength="50"
                android:padding="10dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblXR3"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:autofillHints="" />

            <TextView
                android:id="@+id/lblAR3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/a"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtA"
                app:layout_constraintStart_toStartOf="@+id/txtA"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblBR3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/b"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtB"
                app:layout_constraintStart_toStartOf="@+id/txtB"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblCR3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/c"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtC"
                app:layout_constraintStart_toStartOf="@+id/txtC"
                app:layout_constraintTop_toBottomOf="@+id/txtA" />

            <TextView
                android:id="@+id/lblXR3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/x"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtX"
                app:layout_constraintStart_toStartOf="@+id/txtX"
                app:layout_constraintTop_toBottomOf="@+id/txtB" />

            <Button
                android:id="@+id/btnCalcularReglaDeTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/calcular"
                app:layout_constraintEnd_toEndOf="@+id/txtX"
                app:layout_constraintStart_toStartOf="@+id/txtC"
                app:layout_constraintTop_toBottomOf="@+id/txtC"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/txtFormulaReglaDeTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="@string/formula_regla_de_tres"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btnCalcularReglaDeTres"
                app:layout_constraintStart_toStartOf="@+id/btnCalcularReglaDeTres"
                app:layout_constraintTop_toBottomOf="@+id/btnCalcularReglaDeTres" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="139dp"
                android:layout_height="105dp"
                android:src="@drawable/flecha"
                app:layout_constraintBottom_toTopOf="@+id/lblCR3"
                app:layout_constraintEnd_toStartOf="@+id/txtB"
                app:layout_constraintStart_toEndOf="@+id/txtA"
                app:layout_constraintTop_toTopOf="@+id/lblAR3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="139dp"
                android:layout_height="105dp"
                android:src="@drawable/flecha"
                app:layout_constraintBottom_toBottomOf="@+id/txtC"
                app:layout_constraintEnd_toStartOf="@+id/txtX"
                app:layout_constraintStart_toEndOf="@+id/txtC"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>