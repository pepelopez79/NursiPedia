<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formulas.FormulasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:columnCount="2"
            android:rowCount="7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblMedicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/medicacion"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/estilo_botones">

                <Button
                    android:id="@+id/btnInfusiones"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/ciencia" />

                <TextView
                    android:id="@+id/lblInfusiones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_infusiones"
                    android:typeface="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/estilo_botones">

                <Button
                    android:id="@+id/btnDisoluciones"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/agua" />

                <TextView
                    android:id="@+id/lblDisoluciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_disoluciones" />
            </LinearLayout>

            <LinearLayout
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblSaludCorporal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/salud_corporal"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/estilo_botones">

                <Button
                    android:id="@+id/btnPerdidasInsensibles"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/gota" />

                <TextView
                    android:id="@+id/lblPerdidasInsensibles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_perdidas_insensibles" />
            </LinearLayout>

            <LinearLayout
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/estilo_botones">

                <Button
                    android:id="@+id/btnIMC"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/pesa" />

                <TextView
                    android:id="@+id/lblIMC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblOtras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/otras"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/estilo_botones">

                <Button
                    android:id="@+id/btnReglaDeTres"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/calculo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/titulo_regla_de_tres" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/estilo_botones">

                <Button
                    android:id="@+id/btnGastoCardiaco"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/corazon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/titulo_gasto_cardiaco" />
            </LinearLayout>

        </GridLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>