<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuarios.CuentaFragment" >

    <ImageView
        android:id="@+id/logoCerrarSesion"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:src="@mipmap/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bannerCerrarSesion"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@mipmap/rotulo"
        app:layout_constraintEnd_toEndOf="@+id/logoCerrarSesion"
        app:layout_constraintStart_toStartOf="@+id/logoCerrarSesion"
        app:layout_constraintTop_toBottomOf="@+id/logoCerrarSesion" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="@string/cerrar_sesion"
        app:layout_constraintEnd_toEndOf="@+id/txtEmailUsuario"
        app:layout_constraintStart_toStartOf="@+id/txtEmailUsuario"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailUsuario"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtEmailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/email"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logoCerrarSesion"
        app:layout_constraintStart_toStartOf="@+id/logoCerrarSesion"
        app:layout_constraintTop_toBottomOf="@+id/bannerCerrarSesion" />
</androidx.constraintlayout.widget.ConstraintLayout>